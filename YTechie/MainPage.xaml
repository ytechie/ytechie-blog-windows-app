            </AppBarButton>
            <AppBarButton Name="HomeButton" Label="Home" Icon="Home" Click="HomeButton_OnClick"></AppBarButton>
            <AppBarButton Name="RefreshButton" Label="Refresh" Icon="Refresh" Click="RefreshButton_OnClick"></AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
</Page>
